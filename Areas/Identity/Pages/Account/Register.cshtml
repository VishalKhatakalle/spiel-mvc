@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-2xl font-bold text-center">Register</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-error" role="alert"></div>

                <div class="form-control w-full">
                    <label asp-for="Input.Email" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input asp-for="Input.Email" class="input input-bordered w-full" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-error text-sm mt-1"></span>
                </div>

                <div class="form-control w-full">
                    <label asp-for="Input.Password" class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input asp-for="Input.Password" class="input input-bordered w-full" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-error text-sm mt-1"></span>
                </div>

                <div class="form-control w-full">
                    <label asp-for="Input.ConfirmPassword" class="label">
                        <span class="label-text">Confirm Password</span>
                    </label>
                    <input asp-for="Input.ConfirmPassword" class="input input-bordered w-full" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-error text-sm mt-1"></span>
                </div>

                <div class="form-control mt-6">
                    <button id="registerSubmit" type="submit" class="btn btn-primary w-full">Register</button>
                </div>

                <div class="text-center mt-4">
                    <p>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link link-hover link-primary">Already have an account? Log in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
