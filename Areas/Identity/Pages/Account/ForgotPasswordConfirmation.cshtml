@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body text-center">
            <h2 class="card-title text-2xl font-bold text-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-success" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Email Sent
            </h2>

            <p class="py-4">Please check your email to reset your password.</p>

            <div class="card-actions justify-center mt-4">
                <a asp-page="./Login" class="btn btn-primary">Return to login</a>
            </div>
        </div>
    </div>
</div>
