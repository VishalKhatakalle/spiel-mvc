@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body text-center">
            <h2 class="card-title text-2xl font-bold text-center justify-center text-error">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                Account Locked
            </h2>

            <p class="py-4">This account has been locked out, please try again later or contact support for assistance.</p>

            <div class="card-actions justify-center mt-4">
                <a asp-page="./Login" class="btn btn-primary">Return to login</a>
            </div>
        </div>
    </div>
</div>
